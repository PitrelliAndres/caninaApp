# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_WS_URL=http://localhost:5000
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# Security Configuration (environment-based defaults, optional overrides)
NEXT_PUBLIC_STRICT_JWT_VALIDATION=false  # true in production
NEXT_PUBLIC_REQUIRE_HTTPS=false  # true in production
NEXT_PUBLIC_SESSION_TIMEOUT=120  # minutes (15 in production)
NEXT_PUBLIC_REFRESH_THRESHOLD=5  # minutes before expiry to refresh
NEXT_PUBLIC_SECURITY_LOGGING=false  # true in production
NEXT_PUBLIC_LIMIT_PUBLIC_DATA=false  # true in production

# JWT Secret (must match backend)
JWT_SECRET=your-jwt-secret-key
